{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "jest.config.ts"
  ],
  "include": [
    "**/*.ts",
    "src/v-angular/button/button.story.ts_",
    "src/v-angular/dropdown/dropdown.story.ts_",
    "src/v-angular/dropdown-list/dropdown-list.story.ts_",
    "src/v-angular/modal/dialog/dialog.story.ts_",
    "src/v-angular/modal/fold-out/fold-out.story.ts_",
    "src/v-angular/modal/slide-out/slide-outstory.ts_",
    "src/v-angular/modal/slide-out/slide-out.story.ts_",
    "src/lib/drag-drop/drag-drop.story.ts_",
    "src/lib/tabs/tabs.story.ts_",
    "src/lib/input/input.story.ts_",
    "src/lib/radio/radio.story.ts_",
    "src/lib/table/table.story.ts_",
    "src/lib/slider/slider.story.ts_",
    "src/lib/tooltip/tooltip.story.ts_",
    "src/lib/textarea/textarea.story.ts_",
    "src/lib/drag-drop/drag-drop.component.ts_"
  ]
}
